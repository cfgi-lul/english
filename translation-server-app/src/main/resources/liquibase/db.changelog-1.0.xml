<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="1.0.0" author="cfgi">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="users"/>
            </not>
        </preConditions>
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="username" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.1" author="cfgi">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="dictionary"/>
            </not>
        </preConditions>
        <createTable tableName="dictionaries">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="rus" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="eng" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="learning_rating" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.2" author="cfgi">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="user_dictionaries"/>
            </not>
        </preConditions>
        <createTable tableName="user_dictionaries">
            <column name="user_id" type="BIGINT">
            </column>

            <column name="dictionary_id" type="BIGINT">
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.3" author="cfgi">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <foreignKeyConstraintExists/>
        </preConditions>
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_dictionaries"
                                 constraintName="fk_user_dictionaries_user"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

    <changeSet id="1.0.4" author="cfgi">
        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <foreignKeyConstraintExists/>
        </preConditions>
        <addForeignKeyConstraint baseColumnNames="dictionaries_id"
                                 baseTableName="user_dictionaries"
                                 constraintName="fk_user_dictionaries_dictionaries"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="dictionaries"/>
    </changeSet>
</databaseChangeLog>